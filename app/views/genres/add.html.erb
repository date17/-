<div class="body-title">ジャンルの追加フォーム</div>
<hr>

<% if @genre.errors.any? %>
<ul>
    <%= @genre.errors.full_messages.each do |err| %>
        <li><%= err %></li>
    <% end %>
</ul>
<hr>
<% end %>

<div class="add-form">
<%= form_for(@genre, url:{controller:'genres', action:'add'}) do |form| %>
<table class="table table-bordered">
    <thead class="thead-dark"><tr><th>ジャンル名</th></thead>
        <td><%= form.text_field :name %></td></tr>
        <td><%= form.submit "追加" %></td></tr>
</table>
<% end %>
</div>