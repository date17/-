<div class="body-title">ジャンルの更新フォーム</div>
<hr>

<% if @genre.errors.any? %>
<ul>
    <%= @genre.errors.full_messages.each do |err| %>
        <li><%= err %></li>
    <% end %>
</ul>
<hr>
<% end %>
<div class="edit-form">
    <%= form_for(@genre, url:{controller:'genres', action:'edit'}) do |form| %>
    <table class="table table-bordered">
        <thead class="thead-dark"><tr><th>ジャンル名</th></thead>
            <td><%= form.text_field :name %></td></tr>
            <td><%= form.submit "更新" %></td></tr>
    </table>
    <% end %>
</div>
